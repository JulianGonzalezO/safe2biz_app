<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnlySubMenuItemPrincipal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:gravity="left"
    android:descendantFocusability="blocksDescendants">

    <!--android:background="@drawable/border_carview_subcategoria"-->

    <LinearLayout
        android:id="@+id/lnlySubCategoriaViewDetalle2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/safe2biz_anaranjado_claro">

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/app_letra_tab">
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.76">

            <TextView
                android:id="@+id/tvOrdenSubCategoriaListViewDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_letra_tab"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="left"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/app_letra_tab">
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_weight="1.06">

            <TextView
                android:id="@+id/tvDescripcionSubCategoriaListViewDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_letra_tab"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="left"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlyCamposEditablesDetalle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.18"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_gravity="center"
            android:gravity="left"
            android:visibility="invisible">

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/app_letra_tab">
            </View>

            <RadioGroup
                android:id="@+id/rdGroupAlternativasSubCategoriaListViewDetalle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.58"
                android:weightSum="4">

                <RadioButton
                    android:id="@+id/rdBtnNcSubCategoriaListViewDetalle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <RadioButton
                    android:id="@+id/rdBtnCpSubCategoriaListViewDetalle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rdBtnCSubCategoriaListViewDetalle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/rdBtnNaSubCategoriaListViewDetalle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </RadioGroup>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/app_letra_tab">
            </View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.14"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgViewObsSubCategoriaListViewDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/ic_letter"
                    android:gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/app_letra_tab">
            </View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.14"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgViewFotoSubCategoriaListViewDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/app_letra_tab">
            </View>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.14"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgViewEditarSubCategoriaListViewDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:gravity="center"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>