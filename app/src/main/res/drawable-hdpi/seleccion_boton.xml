<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#606060" />
            <stroke
                    android:width="2dp"
                    android:color="#404040" />
            <corners
                    android:radius="3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid
                    android:color="#606060" />
            <stroke
                    android:width="2dp"
                    android:color="#404040" />
            <corners
                    android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:endColor="#606060"
                    android:startColor="#A0A0A0"
                    android:angle="270" />
            <stroke
                    android:width="2dp"
                    android:color="#404040" />
            <corners
                    android:radius="3dp" />

        </shape>
    </item>
</selector>
